.hero {
  background: url(../../assets/images/hero-cover.jpg) no-repeat center center;
  background-size: cover;
}
.hero .bg-overlay {
  background: rgba(0, 0, 0, 0.6);
}
.hero .social-links a {
  background: rgba(0, 0, 0, 0.6);
  border: 1px solid #FFFFFF;
  border-radius: 50px;
}
.hero .social-links a i {
  font-size: 1.5rem;
}
.hero button {
  background: #009E66;
}
.hero button:hover {
  background: #01b676;
}

.skills .container > div {
  background-color: #161616;
}
.skills .progress-bar-container {
  margin-bottom: 1rem;
}
.skills .progress-bar-label {
  margin-bottom: 0.5rem;
}

.experience-item {
  @apply relative py-10 px-12;
  background-color: #161616;
  border-left: 2px solid transparent;
  border-left-color: #009E66;
}
.experience-item h4 {
  @apply text-xl text-white font-medium mb-2;
}
.experience-item .experience-item-arrow::after,
.experience-item .experience-item-arrow::before {
  content: "";
  display: block;
  position: absolute;
}
.experience-item .experience-item-arrow::after {
  left: 16px;
  border: 8px solid transparent;
  border-left-color: #009E66;
}
.experience-item .experience-item-arrow::before {
  width: 16px;
  height: 16px;
  left: 0;
  background-color: #009E66;
}
.experience-item .experience-item-details {
  @apply block mb-5 text-white;
}
.experience-item .experience-item-details,
.experience-item p,
.experience-item li {
  color: #9F9F9F;
}

.experience-item:not(:last-child) {
  border-bottom: 1px solid #313131;
}

.about .container > div {
  background-color: #161616;
}
.about p {
  color: #9F9F9F;
}

.contact .container > div {
  background-color: #161616;
}
.contact ul > li > div:first-child {
  background: rgba(0, 0, 0, 0.6);
}
.contact form input,
.contact form textarea {
  background: #161616;
  color: #9F9F9F;
  border: 1px solid #9F9F9F;
}
.contact form textarea:focus,
.contact form input:focus {
  outline: none;
}
.contact form button[type=submit] {
  background: #009E66;
}
.contact form button[type=submit]:hover {
  background: #01b676;
}