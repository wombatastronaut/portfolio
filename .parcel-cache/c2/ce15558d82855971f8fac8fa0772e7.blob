@tailwind base;
@tailwind components;
html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body {
  font-family: "Montserrat", sans-serif;
  background-color: #101010;
  font-size: 16px;
}

h1 {
  font-size: calc(38px + (65 - 38) * ((100vw - 300px) / (1600 - 300)));
  letter-spacing: 0.15rem;
}

h2 {
  font-size: calc(25px + (30 - 25) * ((100vw - 300px) / (1600 - 300)));
}

button {
  position: relative;
}

button:focus, a:focus {
  outline: none;
}

a.button.loading, button.loading, input[type=submit].loading {
  color: rgba(0, 0, 0, 0) !important;
  text-shadow: none;
}

button.loading::before, a.button.loading::before, input[type=submit].loading::before, .show-loading::before, .loading-spinner {
  content: "";
  border: 0.1875rem solid #fff;
  border-top: 0.1875rem solid transparent;
  border-radius: 50%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 1.5rem;
  height: 1.5rem;
  -webkit-animation: spin 1s linear infinite;
  animation: spin 1s linear infinite;
}

@-webkit-keyframes spin {
  0% {
    -webkit-transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
  }
}
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
/*** Header ***/
nav ul > li > a::after {
  content: "";
  display: block;
  border-bottom: 2px solid #009E66;
  width: 0;
  position: absolute;
  right: 0;
  margin-top: 0.5rem;
  -webkit-transition: 0.25s ease;
  transition: 0.25s ease;
}
nav ul > li > a:hover::after {
  width: 100%;
}

/*** End of Header ***/
.scroll-to-top button {
  position: fixed;
  bottom: 0.75rem;
  right: 1.25rem;
  background: #3A3C41;
}
.scroll-to-top button:focus {
  outline: none;
}
.scroll-to-top button i {
  font-size: 1rem;
}

.progress-bar-container .progress-bar-label {
  color: #FFFFFF;
}
.progress-bar-container .progress-bar-outline {
  display: flex;
  overflow: hidden;
  height: 0.25rem;
  line-height: 0;
  background-color: #E9ECEF;
}
.progress-bar-container .progress-bar {
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  background-color: #009E66;
  color: #FFFFFF;
  text-align: center;
  white-space: nowrap;
  -webkit-transition: 1.25s ease;
  transition: width 1.25s ease;
}

.modal-backdrop {
  background: rgba(0, 0, 0, 0.8);
}

/*** Footer ***/
footer {
  background-color: #161616;
  padding: 1.75rem;
}

/*** End of Footer ***/
.fade-in {
  opacity: 1;
  animation-name: fadeInOpacity;
  animation-iteration-count: 1;
  animation-timing-function: ease;
  animation-duration: 0.75s;
}

.fade-in-long {
  opacity: 1;
  animation-name: fadeInOpacity;
  animation-iteration-count: 1;
  animation-timing-function: ease;
  animation-duration: 3s;
}

@keyframes fadeInOpacity {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
